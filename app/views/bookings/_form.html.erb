<%= form_for([@room, @room.bookings.new]) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <label>Check In</label>
      <%= f.text_field :start_date, readonly: 'true', placeholder: 'Start Date' %>
    </div>
    <div class="col-md-6">
      <label>Check Out</label>
      <%= f.text_field :end_date, readonly: 'true', placeholder: "End Date", disabled: 'true' %>
    </div>
  </div>

  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.hidden_field :price, value: @room.price %>
  <%= f.hidden_field :total, id: 'booking_total' %>

  <div id="preview" style="display:none">
    <h4><span id="message"></span></h4>

    <table class="booking-table">
      <tbody>
        <tr>
          <td>Day(s)</td>
          <td><span id="booking_days"></span></td>
        </tr>
        <tr>
          <td>Total</td>
          <td><span id="booking_sum"></span></td>
        </tr>
      </tbody>
    </table>
  </div>

  <br>
  <%= f.submit "Book Now", class: "btn pink" %>
<% end %>

<script>
  $(function() {
    $('#booking_start_date').datepicker();
      dateFormat: "dd-mm-yy"
    });
    $('#booking_end_date').datepicker();
      dateFormat: "dd-mm-yy"
    });
  });
</script>
